<Window x:Class="ThumbPick.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThumbPick - Thumbnail Picker" Height="600" Width="900"
        AllowDrop="True" DragEnter="Window_DragEnter" Drop="Window_Drop">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16" MaxWidth="820">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Drag and drop a video file or browse to get started." FontSize="16" FontWeight="SemiBold" />

            <Border Grid.Row="1" Margin="0,12,0,16" BorderBrush="#888" BorderThickness="2" CornerRadius="8" Padding="20" Background="#11FFFFFF"
                    AllowDrop="True" DragEnter="DropZone_DragEnter" Drop="DropZone_Drop" BorderDashArray="4 2">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Drop video file here" FontSize="18" HorizontalAlignment="Center" />
                    <TextBlock Text="Supported formats: mp4, mov, mkv" HorizontalAlignment="Center" Opacity="0.7" />
                </StackPanel>
            </Border>

            <Grid Grid.Row="2" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Video" Margin="0,0,12,0" />
                <TextBox Grid.Column="1" Name="VideoPathTextBox" IsReadOnly="True" Height="32" />
                <Button Grid.Column="2" Content="Browse..." Width="100" Height="32" Click="BrowseVideo_Click" />
            </Grid>

            <Grid Grid.Row="3" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Preset" Margin="0,0,12,0" />
                <ComboBox Grid.Column="1" Name="PresetComboBox" DisplayMemberPath="Name" SelectedValuePath="Name" Height="32" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="Sampling" Margin="16,0,12,0" />
                <ComboBox Grid.Column="3" Name="SamplingModeCombo" Height="32" SelectedIndex="0">
                    <ComboBoxItem Content="Frames / Second" Tag="fps" />
                    <ComboBoxItem Content="Frames / Minute" Tag="fpm" />
                </ComboBox>
                <TextBlock Grid.Column="4" VerticalAlignment="Center" Text="Value" Margin="16,0,12,0" />
                <TextBox Grid.Column="5" Name="SamplingValueTextBox" Height="32" Text="2" />
            </Grid>

            <Grid Grid.Row="4" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Top picks" Margin="0,0,12,0" />
                <TextBox Grid.Column="1" Name="TopCountTextBox" Height="32" Text="6" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="Neighbors" Margin="16,0,12,0" />
                <TextBox Grid.Column="3" Name="NeighborCountTextBox" Height="32" Text="2" />
            </Grid>

            <Grid Grid.Row="5" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Output" Margin="0,0,12,0" />
                <TextBox Grid.Column="1" Name="OutputDirectoryTextBox" Height="32" />
                <Button Grid.Column="2" Content="Browse..." Width="100" Height="32" Click="BrowseOutput_Click" />
            </Grid>

            <Grid Grid.Row="6" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="ffmpeg" Margin="0,0,12,0" />
                <TextBox Grid.Column="1" Name="FfmpegPathTextBox" Height="32" />
                <Button Grid.Column="2" Content="Browse..." Width="100" Height="32" Click="BrowseFfmpeg_Click" />
            </Grid>

            <StackPanel Grid.Row="7" Orientation="Vertical">
                <Button Name="RunButton" Content="Generate Thumbnails" Height="40" Width="220" HorizontalAlignment="Left" Click="RunButton_Click" Margin="0,0,0,12" />
                <TextBlock Name="StatusTextBlock" Text="Idle" TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
